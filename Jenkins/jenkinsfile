pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/sdk:6.0'
            args '-u root:root'
        }
    }
    stages {
        stage("Clean workspace") {
            steps {
                cleanWs()
            }
        }
        stage("Restore packages") {
            steps {
                sh "dotnet --version"
                sh "dotnet restore TestNinja/TestNinja.sln"
            }
        }
        stage("Build") {
            steps {
                sh "dotnet build --configuration Debug"
            }
        }
    }
}
